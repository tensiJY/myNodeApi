<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div>
      <textarea id="msgbox" style="width: 800px; height: 500px"></textarea>
    </div>
    <input type="text" id="msg" />
    <input type="button" id="btn" />
  </body>
  <script
    src="https://cdn.socket.io/3.1.3/socket.io.min.js"
    integrity="sha384-cPwlPLvBTa3sKAgddT6krw0cJat7egBga3DJepJyrLl4Q9/5WLra3rrnMcyTyOnh"
    crossorigin="anonymous"
  ></script>
  <script>
    const socket = io(`http://localhost`);
    socket.on(`enter`, (data) => {
      console.log(data);
      var obj = JSON.parse(data);

      var target = document.getElementById("msgbox");
      target.append("\r\n");

      target.append(obj.msg);
    });

    //socket.emit("setMsg", JSON.stringify({ data: "pppp" }));

    const btn = document.getElementById(`btn`);
    btn.addEventListener("click", (e) => {
      const target = document.getElementById("msg");
      const msg = target.value;
      console.log(msg);
      socket.emit(
        "setMsg",
        JSON.stringify({
          msg: msg,
        })
      );
      target.value = "";
    });

    socket.on(`getMsg`, (data) => {
      console.log(data);
      const obj = JSON.parse(data);
      var target = document.getElementById("msgbox");
      target.append("\r\n");

      target.append(obj.msg);
    });
  </script>
</html>
